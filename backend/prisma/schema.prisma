generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
}

enum TransactionType {
  INCOME
  EXPENSE
  SAVING
}

enum Frequency {
  DAILY
  WEEKLY
  MONTHLY
  YEARLY
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  categories     Category[]
  transactions   Transaction[]
  budgets        Budget[]
  recurringRules RecurringRule[]
}

model Category {
  id   Int             @id @default(autoincrement())
  name String
  type TransactionType

  userId Int
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  transactions   Transaction[]
  budgets        Budget[]
  recurringRules RecurringRule[]

  @@unique([name, userId])
}

model Transaction {
  id          Int             @id @default(autoincrement())
  amount      Decimal         @db.Decimal(19, 4)
  description String?
  date        DateTime
  type        TransactionType

  userId Int
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  categoryId Int?
  category   Category? @relation(fields: [categoryId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([date])
}

model Budget {
  id     Int     @id @default(autoincrement())
  amount Decimal @db.Decimal(19, 4)
  month  Int
  year   Int

  userId Int
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  categoryId Int
  category   Category @relation(fields: [categoryId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, categoryId, month, year])
}

model RecurringRule {
  id          Int             @id @default(autoincrement())
  amount      Decimal         @db.Decimal(19, 4)
  description String?
  frequency   Frequency
  startDate   DateTime
  nextRun     DateTime
  type        TransactionType

  isActive Boolean @default(true)

  userId Int
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  categoryId Int?
  category   Category? @relation(fields: [categoryId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
